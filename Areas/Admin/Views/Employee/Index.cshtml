@using Mamba.Models
@model List<Employee>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Inverse table</h4>
                <p class="card-description">
                    Add class <code>.table-dark</code>
                </p>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>

                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Surname
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Employee employee in Model)
                            {
                                count++;
                                <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/assets/img/team/@employee.Image">
                                </td>
                                <td>
                                    @employee.Name
                                </td>
                                <td>
                                   @employee.Surname
                                </td>
                                    <td>
                                        @employee.Position.Name
                                    </td>
                                <td>
                                        <a asp-action="create" asp-route-id="@employee.Id" class="btn btn-warning"> <i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@employee.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="update" asp-route-id="@employee.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>

                            }
                           
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>